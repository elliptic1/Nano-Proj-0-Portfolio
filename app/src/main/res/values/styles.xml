<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppListTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppListHighlightButtonStyle" parent="AppListButtonStyle">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="AppListButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/btn_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/btn_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/btn_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/btn_vertical_margin</item>
        <item name="android:background">@color/primary_med</item>
    </style>

</resources>
